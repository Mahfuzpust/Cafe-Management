@model Category

<form asp-action="Create" method="post">
    <div class="border p-3 mt-2">
        <div class="row">
            <h2 class="text-primary">Create Category</h2>
            <hr />
        </div>
        @*<div asp-validation-summary="All"></div>*@
        <div class="mb-3">
            <label asp-for="Name" class="mb-1"></label>
            <input asp-for="Name" class="border border-primary form-control"/>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for=DisplayOrder class="mb-1"></label>
            <input asp-for="DisplayOrder" class="form-control border border-primary" />
            <span asp-validation-for="DisplayOrder" class="text-danger"></span>
        </div>
        <div>
            <button type="submit" class="btn btn-sm btn-primary form-control" style="width:150px; border-radius:5px">Submit</button>
            <a asp-action="Index" asp-controller="Category" class="btn btn-sm btn-dark form-control" style="width:150px; border-radius:5px">Back To List</a>
        </div>
    </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial.cshtml" />
}

