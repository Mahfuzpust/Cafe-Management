@model IEnumerable<Product>

<div class="row pb=3">
    @foreach (var product in Model)
    {
        <div class="col-lg-3 col-sm-6">
            <div class="row p-2">
                <div class="col-12 p-1">
                    <div class="card p-4 mt-4 border-3 shadow border-top border-2 rounded">
                        <img src="@product.ImageUrl" class="card-img-top rounded" height="250px" width="200px" />
                        <div class="card-body pb-0">
                            <div class="pl-1">
                                <p class="card-title h5 text-black opacity-75 text-uppercase text-center">@product.Title</p>
                                <p class="card-title text-info text-center"> by @product.FoodName</p>
                            </div>
                            <div class="pl-1">
                                <p class="text-black opacity-75 text-center mb-0">List Price: ৳ <span class="text-decoration-line-through">@product.ListPrice</span></p>
                            </div>
                            <div class="pl-1">
                                <p class="text-black opacity-75 text-center"> As low as: ৳ <span>@product.Price100</span></p>
                            </div>
                        </div>
                        <div>
                            <a href="#" class="btn btn-dark  border-0 form-control">Details</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>