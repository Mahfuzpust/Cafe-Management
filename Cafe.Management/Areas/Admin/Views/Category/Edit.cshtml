@model Category

<form asp-action="Edit" method="post">
    <input asp-for="Id" hidden/>
    <div class="container">
        <div class="row">
            <h2 class="border-0 mt-2">Edit Category</h2>
        </div>
        <hr />
    </div>

    <div class="mb-3">
        <label asp-for="Name" class="mb-1"></label>
        <input asp-for="Name" class="form-control border border-primary"/>
    </div>
    <div class="mb-2">
        <label asp-for="DisplayOrder" class="mb-1"></label>
        <input asp-for="DisplayOrder" class="form-control border border-primary"/>
    </div>
    <div>
        <button type="submit" class="btn btn-sm btn-primary form-control" style="width:150px; border-radius: 5px">Update</button>
        <a asp-action="Index" asp-controller="Category" class="btn btn-sm btn-primary form-control" style="width:150px; border-radius: 5px">Back To List</a>
    </div>
</form>
