@model IEnumerable<Cafe.Models.Category>
@*@model List<Category>*@


<div class="container">
    <div class="row pt-2">
        <div class="col-6">
            <h2>Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-action="Create" asp-controller="Category" class="btn btn-sm btn-primary" style="border-radius: 8px"><i class="bi bi-plus-circle"></i> Create New Category</a>
        </div>
    </div>
</div>


<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Display Order</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var data in Model)
        {
            <tr>
                <td>@data.Id</td>
                <td>@data.</td>
                <td>@data.DisplayOrder</td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-action="Edit" asp-controller="Category" asp-route-id="@data.Id" class="btn btn-sm btn-primary mx-2" style="border-radius:5px"><i class="bi bi-pencil-square"></i> Edit</a>
                        <a asp-action="Delete" asp-controller="Category" asp-route-id="@data.Id" class="btn btn-sm btn-danger mx-2" style="border-radius:5px"><i class="bi bi-trash"></i> Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>