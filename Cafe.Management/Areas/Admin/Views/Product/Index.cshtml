@model List<Product>


<div class="container">
    <div class="row pt-2">
        <div class="col-6">
            <h2>Product List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-action="Upsert" asp-controller="Product" class="btn btn-sm btn-primary" style="border-radius: 8px"><i class="bi bi-plus-circle"></i> Create New Product</a>
        </div>
    </div>
</div>


<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Title</th>
            <th>FoodCode</th>
            <th>FoodName</th>
            <th>ListPrice</th>
            <th>Price</th>
            <th>Price50</th>
            <th>Price100</th>
            <th>Category</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var data in Model)
        {
            <tr>
                <td>@data.Id</td>
                <td>@data.Title</td>
                <td>@data.FoodCode</td>
                <td>@data.FoodName</td>
                <td>@data.ListPrice</td>
                <td>@data.Price</td>
                <td>@data.Price50</td>
                <td>@data.Price100</td>
                <td>@data.Category.Name</td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-action="Upsert" asp-controller="Product" asp-route-id="@data.Id" class="btn btn-sm btn-primary mx-2" style="border-radius:5px"><i class="bi bi-pencil-square"></i> Edit</a>
                        <a asp-action="Delete" asp-controller="Product" asp-route-id="@data.Id" class="btn btn-sm btn-danger mx-2" style="border-radius:5px"><i class="bi bi-trash"></i> Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
