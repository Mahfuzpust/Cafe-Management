@model ProductVM

<form method="post" enctype="multipart/form-data">
    <input asp-for="Product.Id" hidden />
    <input asp-for="Product.ImageUrl" hidden />
    <div class="row">
        <div class="col-10">
            <div class="border p-3 mt-4">
                <div class="row pb-3">
                    <h2 class="">@(Model.Product.Id != 0 ? "Update" : "Create") Product</h2>
                    <hr />
                </div>
                <div asp-validation-summary="ModelOnly"></div>

                <div class="row mb-1 p-1">
                    <label asp-for="Product.Title" class="p-0 mb-2"></label>
                    <input asp-for="Product.Title" class="form-control" />
                    <span asp-validation-for="Product.Title" class="text-danger"></span>
                </div>

                <div class="row mb-1 p-1">
                    <label asp-for="Product.Description" class="p-0 mb-2"></label>
                    <input asp-for="Product.Description" class="form-control" />
                    <span asp-validation-for="Product.Description" class="text-danger"></span>
                </div>

                <div class="row mb-1 p-1">
                    <label asp-for="Product.FoodName" class="p-0 mb-2"></label>
                    <input asp-for="Product.FoodName" class="form-control" />
                    <span asp-validation-for="Product.FoodName" class="text-danger"></span>
                </div>

                <div class="row mb-1 p-1">
                    <label asp-for="Product.FoodCode" class="p-0 mb-2"></label>
                    <input asp-for="Product.FoodCode" class="form-control" />
                    <span asp-validation-for="Product.FoodCode" class="text-danger"></span>
                </div>

                <div class="row mb-1 p-1">
                    <label asp-for="Product.ListPrice" class="p-0 mb-2"></label>
                    <input asp-for="Product.ListPrice" class="form-control" />
                    <span asp-validation-for="Product.ListPrice" class="text-danger"></span>
                </div>

                <div class="row mb-1 p-1">
                    <label asp-for="Product.Price" class="p-0 mb-2"></label>
                    <input asp-for="Product.Price" class="form-control" />
                    <span asp-validation-for="Product.Price" class="text-danger"></span>
                </div>

                <div class="row mb-1 p-1">
                    <label asp-for="Product.Price50" class="p-0 mb-2"></label>
                    <input asp-for="Product.Price50" class="form-control" />
                    <span asp-validation-for="Product.Price50" class="text-danger"></span>
                </div>

                <div class="row mb-1 p-1">
                    <label asp-for="Product.Price100" class="p-0 mb-2"></label>
                    <input asp-for="Product.Price100" class="form-control" />
                    <span asp-validation-for="Product.Price100" class="text-danger"></span>
                </div>

                <div class="row mb-1 p-1">
                    <label asp-for="Product.CategoryId" class="p-0 mb-2"></label>
                    <select asp-for="@Model.Product.CategoryId" asp-items="@Model.CategoryList" class="form-control">
                        <option disabled selected>--Select Category--</option>
                    </select>
                    <span asp-validation-for="Product.CategoryId" class="text-danger"></span>
                </div>

                <div class="row mb-3 p-1">
                    <label asp-for="Product.ImageUrl" class="p-0 mb-2"></label>
                    <input type="file" name="file" asp-for="Product.ImageUrl" class="form-control" />
                    <span asp-validation-for="Product.ImageUrl" class="text-danger"></span>
                </div>

                <div class="mt-4">
                    @if (Model.Product.Id != 0)
                    {
                        <button type="submit" class="btn btn-sm btn-primary form-control " style="width:150px; border-radius:5px">Update</button>
                    }
                    else
                    {
                        <button type="submit" class="btn btn-sm btn-primary form-control " style="width:150px; border-radius:5px">Create</button>
                    }

                    <a asp-action="Index" asp-controller="Product" class="btn btn-sm btn-dark form-control" style="width:150px; border-radius:5px">Back To List</a>
                </div>

            </div>
        </div>
        <div class="col-2">
            <img src ="@Model.Product.ImageUrl" width="100%" 
                  style="border-radius:5px; border:1px solid #bbb9b9" />
        </div>
    </div>
    
</form>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
