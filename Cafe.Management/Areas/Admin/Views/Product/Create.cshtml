@model Product

<form asp-action="Create" method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-3">
            <h2 class=""> Create Product</h2>
            <hr />
        </div>
        <div asp-validation-summary="ModelOnly"></div>

        <div class="row mb-1 p-1">
            <label asp-for="Title" class="p-0 mb-2"></label>
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="row mb-1 p-1">
            <label asp-for="Description" class="p-0 mb-2"></label>
            <input asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="row mb-1 p-1">
            <label asp-for="FoodName" class="p-0 mb-2"></label>
            <input asp-for="FoodName" class="form-control" />
            <span asp-validation-for="FoodName" class="text-danger"></span>
        </div>

        <div class="row mb-1 p-1">
            <label asp-for="FoodCode" class="p-0 mb-2"></label>
            <input asp-for="FoodCode" class="form-control" />
            <span asp-validation-for="FoodCode" class="text-danger"></span>
        </div>

         <div class="row mb-1 p-1">
            <label asp-for="CategoryId" class="p-0 mb-2"></label>
            <select asp-for="CategoryId" asp-items="@(ViewData["CategoryList"] as IEnumerable<SelectListItem>)" class="form-control">
                <option disabled selected>--Select Category--</option>
            </select>
            <span asp-validation-for="CategoryId" class="text-danger"></span>
        </div>

        <div class="row mb-1 p-1">
            <label asp-for="ListPrice" class="p-0 mb-2"></label>
            <input asp-for="ListPrice" class="form-control" />
            <span asp-validation-for="ListPrice" class="text-danger"></span>
        </div>

        <div class="row mb-1 p-1">
            <label asp-for="Price" class="p-0 mb-2"></label>
            <input asp-for="Price" class="form-control" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <div class="row mb-1 p-1">
            <label asp-for="Price50" class="p-0 mb-2"></label>
            <input asp-for="Price50" class="form-control" />
            <span asp-validation-for="Price50" class="text-danger"></span>
        </div>

        <div class="row mb-1 p-1">
            <label asp-for="Price100" class="p-0 mb-2"></label>
            <input asp-for="Price100" class="form-control" />
            <span asp-validation-for="Price100" class="text-danger"></span>
        </div>


        <div class="mt-4">
            <button type="submit" class="btn btn-sm btn-primary form-control " style="width:150px; border-radius:5px">Submit</button>
            <a asp-action="Index" asp-controller="Product" class="btn btn-sm btn-dark form-control" style="width:150px; border-radius:5px">Back To List</a>
        </div>

    </div>
</form>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
