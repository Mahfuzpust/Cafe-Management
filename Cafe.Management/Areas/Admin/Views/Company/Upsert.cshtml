@model Company

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-primary bg-gradient ml-0 py-4">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2"> @(Model.Id != 0 ? "Update" : "Create") Company</h2>
            </div>
        </div>
    </div>

    <div class="card-body p-4">
        <div class="row pt-3">
            <div class="col-md-12">
                <form method="post" class="row" enctype="multipart/form-data">
                    <input asp-for="Id" hidden />
                    <div class="row mb-1 p-1">
                        <label asp-for="Name" class="p-0 mb-2"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="row mb-1 p-1">
                        <label asp-for="PhoneNumber" class="p-0 mb-2"></label>
                        <input asp-for="PhoneNumber" class="form-control" />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                    <div class="row mb-1 p-1">
                        <label asp-for="StreetAddress" class="p-0 mb-2"></label>
                        <input asp-for="StreetAddress" class="form-control" />
                        <span asp-validation-for="StreetAddress" class="text-danger"></span>
                    </div>
                    <div class="row mb-1 p-1">
                        <label asp-for="City" class="p-0 mb-2"></label>
                        <input asp-for="City" class="form-control" />
                        <span asp-validation-for="City" class="text-danger"></span>
                    </div>
                    <div class="row mb-1 p-1">
                        <label asp-for="State" class="p-0 mb-2"></label>
                        <input asp-for="State" class="form-control" />
                        <span asp-validation-for="State" class="text-danger"></span>
                    </div>

                    <div class="row mb-1 p-1">
                        <label asp-for="PostalCode" class="p-0 mb-2"></label>
                        <input asp-for="PostalCode" class="form-control" />
                        <span asp-validation-for="PostalCode" class="text-danger"></span>
                    </div>




                    <div class="mt-4">
                        @if (Model.Id != 0)
                        {
                            <button type="submit" class="btn btn-sm btn-primary form-control " style="width:150px; border-radius:5px">Update</button>
                        }
                        else
                        {
                            <button type="submit" class="btn btn-sm btn-primary form-control " style="width:150px; border-radius:5px">Create</button>
                        }

                        <a asp-action="Index" asp-controller="Company" class="btn btn-sm btn-dark form-control" style="width:150px; border-radius:5px">Back To List</a>
                    </div>
                </form>
            </div>
        </div>
    </div>



</div>




@section Scripts{
    <script>
        tinymce.init({
            selector: 'textarea',
            plugins: 'anchor autolink charmap codesample emoticons  lists   table visualblocks wordcount',
            toolbar: 'undo redo | blocks fontfamily fontsize | bold italic underline strikethrough |  align lineheight | numlist bullist indent outdent',
        });
    </script>
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}